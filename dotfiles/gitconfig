[user]
  name = Chris Roos
  email = chris@seagul.co.uk
[commit]
  template = ~/.gitmessage
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[alias]
  st = status
  co = checkout
  br = branch
  l = "log --oneline --graph --decorate --all"
  mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
[core]
  excludesfile = ~/.gitignore
  editor = vim
[push]
  default = simple
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[rebase]
	autosquash = true
[credential]
	helper = osxkeychain
